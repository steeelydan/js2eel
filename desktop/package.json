{
    "name": "js2eel-desktop",
    "version": "0.6.0",
    "homepage": "https://js2eel.org",
    "description": "JS2EEL",
    "engines": {
        "node": ">=18.0.0"
    },
    "main": "build/main.js",
    "scripts": {
        "electron": "electron .",
        "dev": "concurrently -n tsc,electron -c blue,green \"tsc --watch\" \"echo 'Waiting for TS build...' && sleep 3 && nodemon --exec npm run electron\"",
        "build": "rm -rf ./build/* && tsc",
        "test": "echo \"No tests yet.\"",
        "check": "eslint ./src && tsc --noEmit",
        "dist": "mkdir -p node_modules && npm run build && electron-builder"
    },
    "build": {
        "afterSign": "scripts/apple-notarize.js",
        "appId": "js2eel",
        "productName": "js2eel",
        "files": [
            "build/**/*",
            "gui-dist/**/*",
            "distResources/**/*"
        ],
        "directories": {
            "output": "../dist/desktop",
            "buildResources": "distResources"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "./distResources",
            "category": "Utils",
            "packageCategory": "utils",
            "maintainer": "Steeely Dan",
            "synopsis": "Compile JavaScript to REAPER JSFX/EEL"
        },
        "win": {
            "target": [
                "portable"
            ],
            "icon": "./distResources/icon.png"
        },
        "mac": {}
    },
    "author": "steeelydan",
    "license": "GPL-3.0",
    "devDependencies": {
        "electron": "26.1.0",
        "electron-builder": "24.6.3"
    }
}
